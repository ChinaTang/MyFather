<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="${relativePackage}.${activityClass}" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/title01"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="@string/title02"
        android:textSize="25dp" />

    <LinearLayout
        android:id="@+id/zhu_chang_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="100dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/xiao_zhu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/xiao_zhu_select"
            android:gravity="center"
            android:text="@string/zhu_ye_xiao_zhu"
            android:textColor="#FFFFFF"
            android:textSize="40dp" />

        <Button
            android:id="@+id/si_liao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/zhu_siliao"
            android:gravity="center"
            android:text="@string/zhu_ye_si_liao"
            android:textColor="#000000"
            android:textSize="40dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/zhu_chang_linear"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/mu_zhu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/zhu_muzhu"
            android:gravity="center"
            android:text="@string/zhu_ye_muzhu"
            android:textColor="#000000"
            android:textSize="40dp" />

        <Button
            android:id="@+id/zhuang_wu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/zhu_zhangmu"
            android:gravity="center"
            android:text="@string/zhu_ye_zhang_mu"
            android:textColor="#FFFFFF"
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout><!-- From: file:/F:/AndroidStudioWorkSpace/MyFather/res/layout/activity_main.xml -->